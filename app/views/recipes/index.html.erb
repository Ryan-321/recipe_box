



<%= form_tag(recipes_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Ingredients" %>
      <button class="btn" type="submit">Search</button>
<% end %>

<div class="container_index">
  <% @recipes.each do |recipe| %>
  <div class="recipe">
      <h3><%= recipe.title %></h3>
      <%= link_to image_tag( recipe.photo_url , {:alt=>"#{recipe.title}"}), recipe_path(recipe) %>
  </div>
  <% end %>
</div>



