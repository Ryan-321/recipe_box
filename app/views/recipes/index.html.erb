<h2>Welcome to Recipe Box</h2>


<div class="container_index">
<% @recipes.each do |recipe| %>
<div class="recipe">
    <h3><%= recipe.title %></h3>
    <%= link_to image_tag( recipe.photo_url , {:alt=>"#{recipe.title}"}), recipe_path(recipe) %>
</div>
<% end %>


  <%= link_to "Create New Recipe" , new_recipe_path(@recipe) %>
</div>
